{
  "exclude": [
    "node_modules/**",
    "src/renderer/**",
    "tests/**"
  ],
  "module": {
    "type": "commonjs",
    "strict": true,
    "noInterop": true
  },
  "jsc": {
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@shared/*": [ "./shared/*" ],
      "@main/*": [ "./main/*" ],
      "@back/*": [ "./back/*" ],
      "@renderer/*": [ "./renderer/*" ]
    },
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "transform": {
      "decoratorMetadata": true
    }
  }
}
